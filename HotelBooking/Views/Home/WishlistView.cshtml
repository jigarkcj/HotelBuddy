            opacity: 0;
        }
    }

    @@keyframes fadeout {
        from {
            bottom: 30px;
            opacity: 1;
        }

        to {
            bottom: 60px;
            opacity: 0;
        }
    }

    /*End of snackbar css*/

    .heartIconInActive {
        color: lightgrey !important;
    }

    .heartIconActive {
        color: red !important;
    }

    .heartIconDisplay .top-right {
        float: right;
        margin: 10px 10px 0 0;
        z-index: 2;
        position: absolute;
        background: white;
        border-radius: 1em;
        padding: 4px;
        border: 2px solid;
