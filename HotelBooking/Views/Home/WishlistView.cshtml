            min-width: 350px;
        }
    }

    @@keyframes stay {
        from {
            min-width: 350px;
        }

        to {
            min-width: 350px;
        }
    }

    @@-webkit-keyframes shrink {
        from {
            min-width: 350px;
        }

        to {
            min-width: 50px;
        }
    }

    @@keyframes shrink {
        from {
            min-width: 350px;
        }

        to {
