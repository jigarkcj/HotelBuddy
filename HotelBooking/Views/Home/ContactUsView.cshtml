                <input class="form-control" name="phone" placeholder="Phone..." required="required"/><br />
                <input class="form-control" name="email" placeholder="E-mail..." required="required"/><br />
                <textarea class="form-control" name="text" placeholder="How can we help you?" style="height:150px;"></textarea><br />
                <input class="btn btn-primary" type="submit" value="Send" /><br /><br />
            </form>
        </div>
